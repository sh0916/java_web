<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.emp.dynamic">

<!-- 	<select id="selectEmp" resultType="empDTO4"> -->
<!-- 		select * from emp4 -->
<!-- 	</select> -->


	<!--
		<where>는
		* 바로 다음에 오는 AND나 OR 글씨를 지워줌 : where and a = b에서 where a = b로 만들어줌
		* 바로 다음에 오는게 없으면 where 자체를 지워줌
		
		where 1=1로 시작하는 경우도 있음
		그러면 뒤에 오는 조건은 안심하고 and나 or로 시작할 수 있음
	 -->

	<select id="selectEmp" parameterType="empDTO4" resultType="empDTO4">
	
		select * from emp4
		<where>
			<if test="ename != null and ename != '' ">
<!-- 				lower(ename) = lower(#{ename}) -->
				and lower(ename) like '%' || lower(#{ename}) || '%'
				
			</if>
			<if test="sal != -1">
				and sal <![CDATA[ >= ]]> #{sal}
			
			</if>
			<if test="job != null and job != '' ">
				and lower(job) like '%' || lower(#{job}) || '%'
			</if>

		</where>
	</select>

	<select id="selectEmp2" parameterType="empDTO4" resultType="empDTO4">
	
		select * from emp4
		<where>
			<if test="type != null and type != '' ">
				<if test="type == 1">
					lower(ename) like '%' || lower(#{keyword}) || '%'
				</if>
				<if test="type == 2">
					and sal <![CDATA[ >= ]]> #{keyword}
				</if>
				<if test="type == 3">
					and sal <![CDATA[ <= ]]> #{keyword}
				</if>
				<if test="type == 4">
					and lower(job) like '%' || lower(#{keyword}) || '%'
				</if>
				<if test="type == 5">
					and 
					(
						lower(ename) like '%' || lower(#{keyword}) || '%'
						or
						lower(job) like '%' || lower(#{keyword}) || '%'
					)
				</if>
			</if>
			<if test="chks != null">
				and empno in 
				<foreach 
					item="chk" 
					collection="chks"
					open="(" 
					separator=","
					close=")"
					>
					#{chk}
				</foreach>
			
			</if>
		</where>
		
		<if test="orderColumn != null and orderColumn != '' and orderType != '' ">
			<if test="orderColumn == 'empno'">
				order by empno
				<if test="orderType == 'desc'">
					desc
				</if>
				<if test="orderType == 'asc'">
					asc
				</if>
			</if>
		</if>
		
<!-- 		<if test="orderColumn != null and orderColumn != '' and orderType != null and orderType != '' "> -->
<!-- 			order by ${orderColumn} ${orderType} -->
<!-- 		</if> -->
		
	</select>
	
</mapper>